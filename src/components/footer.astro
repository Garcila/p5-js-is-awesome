---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://p5js.org/",
    description: "p5 site",
    icon: "mdi:home",
  },
  {
    url: "https://editor.p5js.org/",
    description: "Online editor",
    icon: "fa-solid:asterisk",
  },
  {
    url: "https://github.com/Garcila",
    description: "Me on GitHub",
    icon: "fa-brands:github",
  },
];
---

<footer class="relative flex h-64 items-center justify-center bg-slate-800">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <!-- <HeroImage /> -->
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-3">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
